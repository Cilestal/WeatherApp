<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/component_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_daily_weather_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_daily_weather_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sept 17"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_daily_weather_image"
            android:layout_weight="1"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"/>


    <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/component_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
                android:layout_marginStart="@dimen/component_margin"
                app:srcCompat="@drawable/icon_temp"
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"/>

        <android.support.v7.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:paddingStart="@dimen/image_drawable_padding"
                android:paddingEnd="@dimen/image_drawable_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/item_daily_weather_temperature_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    tools:text="50°"/>

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/item_daily_weather_temperature_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="50°"/>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatImageView
                android:layout_marginStart="@dimen/component_margin"
                app:srcCompat="@drawable/icon_wind"
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_daily_weather_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/image_drawable_padding"
                android:paddingEnd="@dimen/image_drawable_padding"
                tools:text="14 Km\\h"/>
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>